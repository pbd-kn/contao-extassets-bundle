{
    "name": "pbd-kn/contao-extassets-bundle",
    "description":"External CSS & JS assets groups with bootstrap and font-awesome support",
    "keywords":["contao", "css", "js", "bootstrap", "font awesome"],
    "type": "contao-module",
    "license":"LGPL-3.0+",
    "authors":[
        {
            "name":"Heimrich & Hannot",
            "email":"digitales@heimrich-hannot.de",
            "role":"Developer"
        },
        {
            "name": "pbd-kn",
            "email": "pb-contao@gmx.de",
            "role": "Developer"
        }        
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "contao/core-bundle": "^4.9||^5.3",
        "twbs/bootstrap": "^5.1"
    },    
    "autoload": {
        "psr-4": {
            "PBDKN\\ExtAssets\\":"src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "PBDKN\\ExtAssets\\ContaoManager\\Plugin"
    },
    "autoload-dev": {
        "psr-4": {
            "PBDKN\\ExtAssets\\Tests\\": "tests/"
        }
    },
    "support":{
        "issues":"https://github.com/pbd-kn/contao-extassets-bundle/issues",
        "source": "https://github.com/pbd-kn/contao-extassets-bundle"
    },
    "scripts": {
        "cs-fixer": [
            "vendor/bin/ecs check src/ tests/ --fix --ansi"
        ]
    }}

